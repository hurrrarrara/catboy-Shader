<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cat-boy Shader</title>
    <link rel="stylesheet" type="text/css" href="style.css">
    <script type="module" src="/src/main.js"></script>
  </head>
  <body>
    <div id="editor">
      <div id="shader-top">
        <div id="shader-list"></div>
        <input id="new-shader" type="button" value="+">
      </div><br/>
      <input id="vert-btn" class="shader-btn" type="button" value="Vertex" style="display: inline;">
      <input id="frag-btn" class="shader-btn" type="button" value="Fragment" style="display: inline;">
      <div id="glsl-editor" style="width: 100%; height:100%"></div>
    </div>
    <input id="gl-compile" type="button" value="Compile">
    <div class="move">
      <div id="canvas-top" class="moved"></div>
      <canvas id="gl-canvas" width="640" height="480"></canvas>
      <div class="resize"></div>
    </div>
    <span id="gl-console"></span>
  </body>
</html>
